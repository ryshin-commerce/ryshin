<!-- Small End -->
<!-- Medium Start -->
<a href="#" class="btn icon info"><i class="fa fa-google"></i></a>
<!-- Medium End -->
<!-- Large Start -->
<a href="#" class="btn icon l warning"><i class="fa fa-google"></i></a>
<!-- Large End -->
<!-- Extra Large Start -->
<a href="#" class="btn icon xl danger"><i class="fa fa-google"></i></a>
<!-- Extra Large End -->
<!-- Extra Extra Large Start -->
<a href="#" class="btn icon xxl purple"><i class="fa fa-google"></i></a>
<!-- Extra Extra Large End -->

<!-- Small Round Start -->
<a href="#" class="btn icon s round success"><i class="fa fa-google"></i></a>
<!-- Small Round End -->
