</div>
<!-- Large End -->

<!-- Extra Large Start -->
<div class="btn-addon xl">
  <a href="#" class="btn m blue"> <i class="fa fa-google-plus"></i> Plus One</a>
  <span href="#" class="addon m blue border">128</span>
</div>
<!-- Extra Large End -->

